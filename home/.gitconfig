[includeIf "gitdir:~/"]
  path = ~/.gitconfig.personal

[includeIf "gitdir:~/repos/github/"]
  path = ~/repos/github/.gitconfig

[includeIf "gitdir:~/repos/azure-devops/"]
  path = ~/repos/azure-devops/.gitconfig

[includeIf "gitdir:~/repos/altinn-studio/"]
  path = ~/repos/altinn-studio/.gitconfig

[push]
  autoSetupRemote = true

[pull]
  rebase = true

[fetch]
  prune = true
  pruneTags = true

[rebase]
  autoStash = true

[merge]
  conflictstyle = zdiff3

[diff]
  colorMoved = default
  algorithm = histogram
  colorMovedWS = allow-indentation-change

[maintenance]
  strategy = incremental

[core]
  pager = delta
  excludesfile = ~/.gitignore.global
